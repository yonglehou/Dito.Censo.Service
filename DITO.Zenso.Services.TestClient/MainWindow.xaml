<Window x:Class="DITO.Zenso.Services.TestClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Client Services" Height="600" Width="800" WindowState="Normal" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="0.8*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="5">
            <Button Name="btnPing" Content="Ping" Click="btnPing_Click" Margin="0, 0, 0, 3"/>
            <Button Name="btnLogin" Content="Login" Click="btnLogin_Click" Margin="0, 0, 0, 3"/>
            <Line Margin="0, 5, 0, 5"></Line>
            <Button Name="btnSaveTrace" Content="Save Trace" Click="btnSaveTrace_Click" Margin="0, 0, 0, 3"/>
            <Button Name="btnSaveCensu" Content="Save Censu" Click="btnSaveCensu_Click" Margin="0, 0, 0, 3"/>
            <Button Name="btnGetCensu" Content="Get Censu" Click="btnGetCensu_Click" Margin="0, 0, 0, 3"/>
            <Line Margin="0, 5, 0, 5"></Line>
        </StackPanel>
        <TextBox Name="txtResult" Grid.Column="1" Margin="5" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
